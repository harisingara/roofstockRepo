<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>MOS_Email</fullName>
        <description>MOS Email</description>
        <protected>false</protected>
        <recipients>
            <field>Member__c</field>
            <type>contactLookup</type>
        </recipients>
        <recipients>
            <recipient>malbaum@roofstock.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>pcarrillo@roofstock.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/RSA_Member_Orientation</template>
    </alerts>
    <alerts>
        <fullName>MOS_Reminder</fullName>
        <description>MOS Reminder</description>
        <protected>false</protected>
        <recipients>
            <field>Email__c</field>
            <type>email</type>
        </recipients>
        <recipients>
            <recipient>malbaum@roofstock.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/RSA_Member_Orientation_Followup</template>
    </alerts>
    <alerts>
        <fullName>RSA_Member_Mid_Year_NPS_Emai</fullName>
        <description>RSA Member Mid Year NPS Emai</description>
        <protected>false</protected>
        <recipients>
            <field>Email__c</field>
            <type>email</type>
        </recipients>
        <recipients>
            <recipient>malbaum@roofstock.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/RSA_Member_Mid_Year_NPS</template>
    </alerts>
    <alerts>
        <fullName>RSA_Sales_Notification</fullName>
        <ccEmails>retail@roofstock.com</ccEmails>
        <description>RSA Sales Notification</description>
        <protected>false</protected>
        <recipients>
            <recipient>tom@roofstock.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/RSA_Sales_Notification</template>
    </alerts>
    <fieldUpdates>
        <fullName>Add_BPM_Account_ID</fullName>
        <field>BPM_ACCOUNT_ID_STAMP__c</field>
        <formula>Value(BPM_Account2_ID__c)</formula>
        <name>Add BPM Account ID</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>MOS_Submitted</fullName>
        <field>MOS_Submitted__c</field>
        <formula>today()</formula>
        <name>MOS Submitted</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Mid_Year_Survey_Sent_Today</fullName>
        <field>Mid_Year_Survey_Sent__c</field>
        <formula>Today()</formula>
        <name>Mid Year Survey Sent = Today</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Update_TEXT_Enrollment_ID</fullName>
        <field>TEXT_SALESFORCE_ID__c</field>
        <formula>Enrollment_ID__c</formula>
        <name>Update TEXT Enrollment ID</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Enrollment Modified</fullName>
        <actions>
            <name>Add_BPM_Account_ID</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Update_TEXT_Enrollment_ID</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Enrollment__c.Name</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>New Enrollment</fullName>
        <actions>
            <name>MOS_Email</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>RSA_Sales_Notification</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>MOS_Submitted</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Enrollment__c.Email__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Academy_Program__c.Name</field>
            <operation>contains</operation>
            <value>Workshop</value>
        </criteriaItems>
        <criteriaItems>
            <field>Academy_Program__c.Name</field>
            <operation>contains</operation>
            <value>Mastermind</value>
        </criteriaItems>
        <criteriaItems>
            <field>Academy_Program__c.Name</field>
            <operation>contains</operation>
            <value>Mastery</value>
        </criteriaItems>
        <description>(send out MOS)</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>New Enrollment and MOS received is blank</fullName>
        <active>true</active>
        <criteriaItems>
            <field>Enrollment__c.Email__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Enrollment__c.MOS_Received__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Academy_Program__c.Name</field>
            <operation>contains</operation>
            <value>Mastery</value>
        </criteriaItems>
        <description>(send out MOS reminder</description>
        <triggerType>onCreateOnly</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>MOS_Reminder</name>
                <type>Alert</type>
            </actions>
            <timeLength>3</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>Send Mid Year Survey %3D True</fullName>
        <actions>
            <name>RSA_Member_Mid_Year_NPS_Emai</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>Mid_Year_Survey_Sent_Today</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Enrollment__c.Send_Mid_Year_Survey__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>

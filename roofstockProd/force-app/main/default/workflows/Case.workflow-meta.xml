        <actions>
            <name>Update_Status_to_Open</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>AND (
   ISCHANGED(OwnerId),
   ISPICKVAL( Status , &quot;New&quot;),
   RecordTypeId == &apos;0124v000001Fvtx&apos;
)</formula>
        <triggerType>onAllChanges</triggerType>

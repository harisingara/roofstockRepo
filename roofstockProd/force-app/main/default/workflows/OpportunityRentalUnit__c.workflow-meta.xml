<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Leasing_Post_Scheduled_Viewing_Reminder_Email</fullName>
        <description>Leasing - Post Scheduled Viewing Reminder Email</description>
        <protected>false</protected>
        <recipients>
            <field>Primary_Leasing_Contact__c</field>
            <type>contactLookup</type>
        </recipients>
        <senderAddress>noreply@streetlane.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Leasing/Leasing_Post_Scheduled_Viewing_Reminder</template>
    </alerts>
    <alerts>
        <fullName>Leasing_Post_Viewing_Reminder_Email</fullName>
        <description>Leasing - Post Viewing Reminder Email</description>
        <protected>false</protected>
        <recipients>
            <field>Primary_Leasing_Contact__c</field>
            <type>contactLookup</type>
        </recipients>
        <senderAddress>noreply@streetlane.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Leasing/Leasing_Post_Viewing_Reminder</template>
    </alerts>
    <rules>
        <fullName>Leasing - Post Scheduled Viewing Reminder</fullName>
        <active>true</active>
        <description>Leasing post scheduling reminder to apply</description>
        <formula>AND( NOT ISBLANK(Primary_Leasing_Contact__r.Email),          NOT Primary_Leasing_Contact__r.HasOptedOutOfEmail,                  Text(Opportunity__r.StageName)  &lt;&gt; &apos;Closed Won = Lease Signed&apos; ,                     Text(Opportunity__r.StageName)  &lt;&gt; &apos;Closed Lost&apos; ,                           Listing_Status__c &lt;&gt; &apos;Inactive&apos; ,                             ISPICKVAL(Status__c, &quot;Scheduled Viewing&quot;),ParentLastUpdated__c &lt;= NOW())</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Leasing_Post_Scheduled_Viewing_Reminder_Email</name>
                <type>Alert</type>
            </actions>
            <actions>
                <name>Leasing_Post_Scheduled_Viewing_Reminder_Email_Sent</name>
                <type>Task</type>
            </actions>
            <timeLength>4</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>Leasing - Post Viewing Reminder For Application</fullName>
        <active>true</active>
        <description>Leasing post viewing reminder to apply</description>
        <formula>AND( NOT ISBLANK(Primary_Leasing_Contact__r.Email),          NOT Primary_Leasing_Contact__r.HasOptedOutOfEmail,                  Text(Opportunity__r.StageName)  &lt;&gt; &apos;Closed Won = Lease Signed&apos; ,                     Text(Opportunity__r.StageName)  &lt;&gt; &apos;Closed Lost&apos; ,                           Listing_Status__c &lt;&gt; &apos;Inactive&apos; ,                             ISPICKVAL(Status__c, &quot;Viewed&quot;),ParentLastUpdated__c &lt;= NOW())</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Leasing_Post_Viewing_Reminder_Email</name>
                <type>Alert</type>
            </actions>
            <actions>
                <name>Leasing_Viewing_reminder_sent</name>
                <type>Task</type>
            </actions>
            <timeLength>1</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <tasks>
        <fullName>Leasing_Post_Scheduled_Viewing_Reminder_Email_Sent</fullName>
        <assignedToType>owner</assignedToType>
        <dueDateOffset>0</dueDateOffset>
        <notifyAssignee>false</notifyAssignee>
        <priority>Normal</priority>
        <protected>false</protected>
        <status>Completed</status>
        <subject>Leasing - Post Scheduled Viewing Reminder Email Sent</subject>
    </tasks>
    <tasks>
        <fullName>Leasing_Viewing_reminder_sent</fullName>
        <assignedToType>owner</assignedToType>
        <dueDateOffset>0</dueDateOffset>
        <notifyAssignee>false</notifyAssignee>
        <priority>Normal</priority>
        <protected>false</protected>
        <status>Completed</status>
        <subject>Leasing - Viewing Reminder Sent</subject>
    </tasks>
</Workflow>

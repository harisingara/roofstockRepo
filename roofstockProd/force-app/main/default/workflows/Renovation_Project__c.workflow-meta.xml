<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Assign_Contractor</fullName>
        <description>Assign Contractor</description>
        <protected>false</protected>
        <recipients>
            <field>Contractor_Email__c</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Survey/Assign_Contractor</template>
    </alerts>
    <fieldUpdates>
        <fullName>Update_Contractor_Email</fullName>
        <field>Contractor_Email__c</field>
        <formula>Contractor__r.Company_Email__c</formula>
        <name>Update Contractor Email</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Update_Roofstock_Revenue</fullName>
        <field>Roofstock_Revenue__c</field>
        <formula>IF( NOT( ISNULL( Final_Cost__c ) ) , Final_Cost__c*(1/10),  Est_Cost__c *(1/10))</formula>
        <name>Update Roofstock Revenue</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Assign Contractor</fullName>
        <actions>
            <name>Assign_Contractor</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Renovation_Project__c.Status__c</field>
            <operation>equals</operation>
            <value>Assign Vendor</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Last Modified Not Blank</fullName>
        <actions>
            <name>Update_Roofstock_Revenue</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>AND(NOT( ISNULL( Opportunity__c ) ), Override_Roofstock_Revenue_Formula__c =False)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Update Contractor Email</fullName>
        <actions>
            <name>Update_Contractor_Email</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Renovation_Project__c.Contractor_Email__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>

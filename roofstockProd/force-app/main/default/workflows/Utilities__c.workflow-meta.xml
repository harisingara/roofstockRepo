    <rules>
        <fullName>Update Utility ID if Blank</fullName>
        <actions>
            <name>Update_Utility_ID</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Utilities__c.Utility_ID__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Utilities - Update Activated Status</fullName>
        <actions>
            <name>Update_Activated_Date</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Utilities__c.Utilities_Status__c</field>
            <operation>equals</operation>
            <value>Active</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Utilities - Update Assigned Status</fullName>
        <actions>
            <name>Utilities_Assigned_Date</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Utilities__c.Utilities_Status__c</field>
            <operation>equals</operation>
            <value>Assigned,In Progress</value>
        </criteriaItems>
        <description>Fill Assigned Date field on the Utilities object when the status equals Assigned</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>

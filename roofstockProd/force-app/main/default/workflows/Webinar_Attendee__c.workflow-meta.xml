<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Post_RSA_Webinar_Email</fullName>
        <description>Post RSA Webinar Email</description>
        <protected>false</protected>
        <recipients>
            <field>Email_Address__c</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/RSA_Webinar_Feedback</template>
    </alerts>
    <fieldUpdates>
        <fullName>survey_submitted_today</fullName>
        <field>Webinar_Survey_Sent__c</field>
        <formula>today()</formula>
        <name>survey submitted = today</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Send Survey %3D True</fullName>
        <actions>
            <name>Post_RSA_Webinar_Email</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>survey_submitted_today</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Webinar_Attendee__c.Submit_Post_Webinar_Survey__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>

<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>54.0</apiVersion>
    <description>This flow will track all job notes at one place with date added.</description>
    <formulas>
        <name>DateFormate</name>
        <dataType>String</dataType>
        <expression>TEXT(MONTH({!$Flow.CurrentDate}))+ &quot;/&quot; + TEXT(DAY({!$Flow.CurrentDate}))+ &quot;/&quot; + RIGHT(TEXT(YEAR({!$Flow.CurrentDate})),2)</expression>
    </formulas>
    <formulas>
        <name>expandJobNotes</name>
        <dataType>String</dataType>
        <expression>{!DateFormate}+&quot; - &quot;+{!$Record.Latest_Job_Notes__c}+ BR() +{!$Record.Job_Notes__c}</expression>
    </formulas>
    <interviewLabel>Track Job Notes {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Track Job Notes</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_Job_Notes</name>
        <label>Update Job Notes</label>
        <locationX>176</locationX>
        <locationY>311</locationY>
        <inputAssignments>
            <field>Job_Notes__c</field>
            <value>
                <elementReference>expandJobNotes</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Latest_Job_Notes_Updated_Date__c</field>
            <value>
                <elementReference>$Flow.CurrentDate</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Latest_Job_Notes__c</field>
            <value>
                <stringValue></stringValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Update_Job_Notes</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Latest_Job_Notes__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>Latest_Job_Notes__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <object>Job__c</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
